{% extends 'base.html.twig' %}

{% block title %}Connexion - Portail RH{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-page">
    <div class="left-panel">
        <h1 class="welcome-text">BIENVENUE</h1>
        <p class="subtitle">au Portail Ressources Humaines</p>
        <img src="{{ asset('images/logo.png') }}" alt="DenimLogo" class="logo">
    </div>
    <div class="right-panel">
        <div class="login-container"> 
            <div class="login-header">
                <h2>Connectez-vous</h2>
                <div class="tabs">
                    <button class="tab" disabled>Parc Auto</button>
                    <button class="tab active" disabled>Portail RH</button>
                </div>
            </div>
            
            {% if error %}
                <div class="login-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            
            <form method="post" id="login-form">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                
                <div class="form-group">
                    <input type="email" 
                           id="inputEmail" 
                           name="email"  
                           placeholder="Identifiant (Email)" 
                           autocomplete="email" 
                           required 
                           autofocus>
                </div>
                
                <div class="form-group">
                    <input type="password" 
                           id="inputPassword" 
                           name="password" 
                           placeholder="Mot de passe" 
                           autocomplete="current-password" 
                           required>
                </div>
                
                <button type="submit" class="login-button">Se connecter</button>
                
                <a href="mailto:rh@example.com" class="login-help-link" id="prob">
                    Probl√®me de connexion? Contactez le service RH
                </a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
